{
	"name": "beverage-order-system",
	"version": "0.1.0",
	"description": "A comprehensive beverage order system with client and merchant applications",
	"private": true,
	"type": "module",
	"scripts": {
		"dev:client": "pnpm --filter @beverage-order-system/client dev",
		"dev:merchant": "pnpm --filter @beverage-order-system/merchant dev",
		"dev:api": "pnpm --filter @beverage-order-system/api dev",
		"build:client": "pnpm --filter @beverage-order-system/client build",
		"build:merchant": "pnpm --filter @beverage-order-system/merchant build",
		"build:api": "pnpm --filter @beverage-order-system/api build",
		"test": "pnpm -r test",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
		"lint": "eslint \"**/*.{js,jsx,ts,tsx,json,md}\" --fix",
		"lint:check": "eslint \"**/*.{js,jsx,ts,tsx}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
	},
	"keywords": [
		"beverage",
		"order",
		"system",
		"monorepo",
		"pnpm"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@eslint/eslintrc": "^3.0.2",
		"@eslint/js": "^9.24.0",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^14.0.0",
		"prettier": "^2.8.8"
	},
	"engines": {
		"node": ">=16.0.0",
		"pnpm": ">=7.0.0"
	},
	"packageManager": "pnpm@10.6.1+sha512.40ee09af407fa9fbb5fbfb8e1cb40fbb74c0af0c3e10e9224d7b53c7658528615b2c92450e74cfad91e3a2dcafe3ce4050d80bda71d757756d2ce2b66213e9a3"
}